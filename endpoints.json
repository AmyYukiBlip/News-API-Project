{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      "title",
      "topic",
      "author",
      "created_at",
      "votes",
      "comment_count",
      "sort_by",
      "order",
      "topicFilter"
    ],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object by passed ID",
    "queries": ["article_id"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for passed ID",
    "queries": ["article_id"],
    "exampleResponse": {
      "body": [
        {
          "comment_id": 5,
          "body": "I hate streaming noses",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Adds a comment for an article based on article_id",
    "queries": ["article_id"],
    "requestBody": {
      "username": "text",
      "body": "text"
    },
    "exampleResponse": {
      "body": [
        {
          "comment_id": 19,
          "body": "One test comment to rule them all",
          "article_id": 1,
          "author": "butter_bridge",
          "votes": 0,
          "created_at": "2025-01-29T10:35:48.042Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id/": {
    "description": "Increases or decreases votes for article based on article_id",
    "queries": ["article_id"],
    "requestBody": {
      "inc_votes": "Number"
    },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 101,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id/": {
    "description": "Deletes comment based on comment_id",
    "queries": ["comment_id"],
    "exampleResponse": {
      "body": [{}]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
